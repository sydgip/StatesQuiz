<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizQuestionFragment"
    android:gravity="center">

    <!-- TextView for displaying the quiz question -->
    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Question Goes Here"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"/>

    <!-- RadioGroup for answer choices -->
    <RadioGroup
        android:id="@+id/answerOptionsRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/answerOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer Option 1"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"/>

        <RadioButton
            android:id="@+id/answerOption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer Option 2"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"/>

        <RadioButton
            android:id="@+id/answerOption3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer Option 3"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"/>
    </RadioGroup>
</LinearLayout>